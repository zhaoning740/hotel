.orderlist-main{padding: 20rpx 0;}
.orderlist-list{font-size: 24rpx; color: #333; padding:20rpx;
    border-bottom: 1rpx solid #f4f4f4}
.orderlist-header{display: flex; justify-content: space-between; line-height: 48rpx; padding-bottom: 10rpx; border-bottom: 1px solid #f3f3f3;}
.orderlist-status{}
.orderlist-center{padding: 20rpx 0;}
.orderlist-center-list{display: flex; padding-bottom: 20rpx;}
.orderlist-info{flex: 1; padding-left: 20rpx;}
.orderlist-footer{display: flex; justify-content: space-between;}
.orderlist-btn{ border: 1px solid #333; padding: 4rpx 10rpx;}
.orderlist-money span{color: #e94f4f;}
.orderlist-price{color: #666;}
.orderinfo-user{font-size: 24rpx; color: #333; padding: 20rpx; line-height: 48rpx;border-bottom: 1rpx solid #f4f4f4}
.orderinfo-user-item text{vertical-align: text-top; float: left}
.orderinfo-user-item image{float: left}
.hj-cell{display: flex; padding: 20rpx 30rpx; line-height: 60rpx; align-items: center; border-bottom: 1px solid #f3f3f3; font-size: 28rpx;}
.hj-cell-right{position: relative;width: 20rpx;}
.hj-cell-right:after{content: " ";display: inline-block;height: 12rpx;width: 12rpx;border-width: 4rpx 4rpx 0 0;border-color: #dcdcdc;border-style: solid;-webkit-transform: matrix(.71,.71,-.71,.71,0,0);transform: matrix(.71,.71,-.71,.71,0,0);top: -4rpx;position: absolute;top: 50%;margin-top: -4px;right: 4rpx;}
.hj-cell-center{flex: 1; text-align: right;}
.hj-cell-left:before{padding-right: 10rpx; color: #666;}
.hj-cell-left{color: #333; font-size: 28rpx;}
.orderinfo-main{padding-bottom: 100rpx;}
.orderinfo-btn{width: 100%;height: 88rpx;line-height: 88rpx;background: #e94f4f;display: inline-block;color: #fff;position: fixed; bottom: 0; left: 0; text-align: center; font-size: 28rpx;}
.wl-flex{display: flex; justify-content: space-between; line-height: 60rpx;}
